<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="enruta.sistole_proto_tampico"
    android:installLocation="preferExternal"
    android:versionCode="7"
    android:versionName="Rezago Tampico 7" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        name="enruta.sistole_proto_tampico.Globales"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="enruta.sistole_proto_tampico.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.TomaDeLecturas"
            android:configChanges="keyboardHidden|navigation|orientation|screenSize"
            android:label="@string/title_activity_toma_de_lecturas"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.CamaraActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.trasmisionDatos"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.VerFotos"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.Filtrado"
            android:label="@string/title_activity_filtrado"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.Input"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.PantallaAnomalias"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.BuscarMedidor"
            android:label="@string/title_activity_buscar_medidor"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.Configuracion"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="sensorPortait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.Informacion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.NoRegistrados"
            android:label="@string/title_activity_no_registrados"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.trasmisionDatosBt"
            android:screenOrientation="portrait" />
        <activity
            android:name="enruta.sistole_proto_tampico.CPL"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="enruta.sistole_proto_tampico.InputCamposGenerico"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="enruta.sistole_proto_tampico.PantallaCodigos"
            android:screenOrientation="portrait" />
    </application>

</manifest>